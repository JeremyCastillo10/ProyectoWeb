@model ProyectoWeb.Models.VIewModels.DetalleVM
<div class="">
    <form method="post">

        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #8B8D8D; ">
                <div class="card-header text-light ml-3 row container" style="border-radius: 0px; background-color:darkslategray">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Producto.NombreProducto</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <h1 class="text-danger"> @((Model.Producto.Precio).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagenRuta@Model.Producto.ImagenUrl" width="100%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.Producto.DescripcionProducto)</p>
                                    </div>
                                    @if(User.IsInRole(WC.AdminRole))
                                    {
                                        <div class="col-12">
                                            cant:
                                        </div>
                                        <div class="col-12">
                                            @if(Model.ExisteProducto)
                                            {
                                                <input asp-for="@Model.Producto.Cantidad" disabled class="form-control"/>
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.Producto.Cantidad" class="form-control"/>
                                            }
                                            <span asp-validation-for="@Model.Producto.Cantidad" class="text-danger"></span>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer " style="background-color:darkslategray">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Regresar</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExisteProducto)
                            {
                                <a asp-action="RemoverDeCarro" asp-route-Id="@Model.Producto.Id" class="btn btn-warning text-white btn-square form-control btn-lg" style="height:50px;">Remover del Carro</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-info text-white form-control btn-lg" style="height:50px; color:azure">Agregar al Carro</button>
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

