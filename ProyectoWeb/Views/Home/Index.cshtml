@model ProyectoWeb.Models.VIewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <button id="btnclick" class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach(var cat in Model.Categorias)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@cat.NombreCategoria.Replace(' ', '-')">
                @cat.NombreCategoria
            </button>
        }
        
    </div>
    <br />

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        @foreach(var pro in Model.Productos)
        {
            <partial name="_ProductoCard" model="pro" />
        }
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {

        $(".filter-button").click(function () {

            var value = $(this).attr('data-filter');
            if (value == "all") {
                $('.filter').show('1000');
            }
            else {
                $(".filter").not('.' + value).hide('3000');
                $('.filter').filter('.' + value).show('3000');

            }
        });

    });
</script>
}
