@model IEnumerable<ProyectoWeb.Models.Categoria>

<div class="container p-3">
@if (Model.Count() > 0)
{
    <div class="row pt-4">
            <div class="col-6"></div>
    </div>
    
        <h2 class="text-primary">Categories</h2>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.NombreCategoria)</td>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                        <td><button style="background-color: red; color: white;">Delete</button></td>

                </tr>
            }
        </tbody>
    </table>
}
else{
    <p1>No hay Registros</p1>
}
<a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">New Category</a>
</div>


