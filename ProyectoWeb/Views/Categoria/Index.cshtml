@model IEnumerable<ProyectoWeb.Models.Categoria>

<h1>Categories</h1>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.NombreCategoria)</td>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td><a asp-controller="Categoria" asp-action="Delete" class="btn btn-success">Back</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p1>No hay Registros</p1>
}
<a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">New Category</a>


