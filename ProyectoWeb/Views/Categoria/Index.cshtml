@model IEnumerable<ProyectoWeb.Models.Categoria>

<div class="container p-3">
@if (Model.Count() > 0)
{
    <div class="row pt-4">
            <div class="col-6"></div>
    </div>
<div class="container border">
        <h2 class="text-primary">Lista de Categories</h2>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Orden</th>
                <th width="30">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.NombreCategoria)</td>
                    <td>@Html.DisplayFor(m => item.MostrarOrden)</td>
                     <td class="text-center">
                         <div class="w-30 btn-group">
                                <a asp-controller="Categoria" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="Categoria" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                         </div>
                     </td>

                </tr>
            }
        </tbody>
    </table>
 </div>
}
else{
    <p1>No hay Registros</p1>
}
    <a asp-controller="Categoria" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"> New</i></a>
</div>


