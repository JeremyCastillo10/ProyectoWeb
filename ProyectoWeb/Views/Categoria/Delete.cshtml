@model ProyectoWeb.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-danger">Esta seguro que desea Eliminar?</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label"> Name Category</label>
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="MostrarOrden" class="form-label"> Order</label>
                    <input asp-for="MostrarOrden" class="form-control" />
                    <span asp-validation-for="MostrarOrden" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Back</a>
            </div>

        </div>
    </div>

</form>
@section Scripts{
    @{
        <partial name='_validationScriptsPartial' />
    }
    }

