@using ProyectoWeb
@model ProyectoWeb.Models.VIewModels.ProductoUsuarioVM

<form method="post" id="payment-form">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Resumen de la Orden
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Regresar al Carro</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Detalle del Usuario:</span>
                                    </h4>
                                </div>
                                @{
                                    var totalOrden = 0.0;
                                }
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Nombres</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="UsuariosAplicacion.NombreCompleto" type="text" class="form-control" id="nombre"/>
                                        <span asp-validation-for="UsuariosAplicacion.NombreCompleto" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Telefono</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="UsuariosAplicacion.PhoneNumber" type="text" class="form-control" id="telefono"/>
                                        <span asp-validation-for="UsuariosAplicacion.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="UsuariosAplicacion.Email" type="text" class="form-control" id="email"/>
                                        <span asp-validation-for="UsuariosAplicacion.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Direccion</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="UsuariosAplicacion.Direccion" type="text" class="form-control" id="direccion"/>
                                        <span asp-validation-for="UsuariosAplicacion.Direccion" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Ciudad</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="UsuariosAplicacion.Ciudad" type="text" class="form-control" id="ciudad"/>
                                        <span asp-validation-for="UsuariosAplicacion.Ciudad" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Resumen:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @for (int i = 0; i < Model.ProductoLista.Count(); i++)

                                        {
                                            <li class="list-group-item d-flex justify-content-between">

                                                <input type="hidden" asp-for="@Model.ProductoLista[i].Id"/>
                                                <input type="hidden" asp-for="@Model.ProductoLista[i].NombreProducto" />
                                                <input type="hidden" asp-for="@Model.ProductoLista[i].Precio" />
                                                <input type="hidden" asp-for="@Model.ProductoLista[i].Cantidad" />
                                                <div>
                                                    <h6 class="my-0">@Model.ProductoLista[i].NombreProducto</h6>
                                                    @if(User.IsInRole(WC.AdminRole))
                                                    {
                                                        <small class="text-muted">Cantidad: @Model.ProductoLista[i].Cantidad</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Precio: @Model.ProductoLista[i].Precio</small>
                                                    }
                                                    <small class="text-muted">Precio C/U: @Model.ProductoLista[i].Precio</small>
                                                </div>
                                                @if (User.IsInRole(WC.AdminRole))
                                                {
                                                    <span class="text-muted">$@(Model.ProductoLista[i].Precio * Model.ProductoLista[i].Cantidad)</span>
                                                    totalOrden += @Model.ProductoLista[i].Precio * @Model.ProductoLista[i].Cantidad;
                                                }

                                                

                                            </li>
                                            

                                        }
                                        @if (User.IsInRole(WC.AdminRole))
                                        {
                                            <div class="col-12 text-end pr-4" style="color:#821f3d">
                                                Total Orden: @string.Format("{0:c}", totalOrden)
                                            </div>
                                        }

                                    </ul>
                                </div>
                                @if (User.IsInRole(WC.AdminRole))
                                {
                                    <div class="col-12">
                                        <div class="wrapper">
                                            <div class="checkout container">
                                                <div id="dropin-container"></div>
                                                <input type="hidden" id="nonce" name="payment_method_nonce" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                           
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            @if(User.IsInRole(WC.AdminRole))
                            {
                                <button type="submit" onclick="return validarcampos('admin')" class="btn btn-primary form-control">Crear Venta</button>
                            }
                            else
                            {
                                <button type="submit" onclick="return validarcampos('noadmin')" class="btn btn-primary form-control">Enviar Orden</button>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://js.braintreegateway.com/web/dropin/1.40.2/js/dropin.min.js"></script>

    <script>
        function validarcampos(rol)
        {
            if(document.getElementById("nombre").value=="" ||
                document.getElementById("telefono").value == ""||
                document.getElementById("email").value == ""||
                document.getElementById("telefono").value == ""||
                document.getElementById("direccion").value == ""){
                swal("Error", "Debe llenar los campos", "error");
                return false;
                }
                if(rol == "noadmin")
                {
                    form.submit();
                }
            return true;
        }
        
    </script>
    <script>
        const form = document.getElementById('payment-form');
        const client_token = "@ViewBag.ClientToken";

        braintree.dropin.create({
            authorization: client_token,
            container: '#dropin-container'
        }, (error, dropinInstance) => {
            if (error) console.error(error);

            form.addEventListener('submit', event => {
                event.preventDefault();

                dropinInstance.requestPaymentMethod((error, payload) => {
                    if (error) console.error(error);

                    // Step four: when the user is ready to complete their
                    //   transaction, use the dropinInstance to get a payment
                    //   method nonce for the user's selected payment method, then add
                    //   it a the hidden field before submitting the complete form to
                    //   a server-side integration
                    document.getElementById('nonce').value = payload.nonce;
                    form.submit();
                });
            });
        });
    </script>
}


