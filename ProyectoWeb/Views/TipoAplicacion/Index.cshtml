@model IEnumerable<ProyectoWeb.Models.TipoAplicacion>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <table class="table table-bordered table-striped" style="width:100%">
        <h2 class="text-info pl-3">Tipo Aplicaciones</h2>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th width="30">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(m => item.Id)</th>
                    <th>@Html.DisplayFor(m => item.Nombre)</th>
                    <th class="text-center">
                        <div class="w-30 btn-group" role="group">
                            <a asp-controller="TipoAplicacion" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-controller="TipoAplicacion" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="TipoAplicacion" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"> New</i></a>
 </div>


