@model IEnumerable<ProyectoWeb.Models.TipoAplicacion>
@{
    ViewData["Title"] = "Index";
}


@if (Model.Count() > 0)
{
<div class="container p-3">
    <table class="table table-bordered table-striped" style="width:100%">
        <h2 class="text-info pl-3">Tipo Aplicaciones</h2>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(m => item.Id)</th>
                    <th>@Html.DisplayFor(m => item.Nombre)</th>
                    <th class="text-center">
                        <div class="w-55 btn-group" role="group">
                            <a asp-controller="TipoAplicacion" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="TipoAplicacion" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
 </div>
}
else{
    <p1>No hay registros</p1>
}
<a asp-controller="TipoAplicacion" asp-action="Create" class="btn btn-primary">New Type</a>

