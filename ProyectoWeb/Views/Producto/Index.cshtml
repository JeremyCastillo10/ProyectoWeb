@model IEnumerable<ProyectoWeb.Models.Producto>
@{
    ViewData["Title"] = "Index";
}

<div class="container border">
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Precio</td>
                <td>Categoria</td>
                <td>tipo</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.NombreProducto)</td>
                    <td>@Html.DisplayFor(m => item.Precio)</td>
                    <td>@Html.DisplayFor(m => item.Categoria.NombreCategoria)</td>
                    <td>@Html.DisplayFor(m => item.TipoAplicacion.Nombre)</td>
                    <td class="text-center">
                        <div class="w-30 btn-group">
                            <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-controller="Producto" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary"><i class="fa-solid fa-plus"> New</i></a>
</div>

